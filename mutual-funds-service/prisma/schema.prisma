generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model MutualFund {
  id          String      @id @default(uuid())
  schemeCode  String      @unique
  schemeName  String
  category    String
  fundHouse   String
  // Add other fund details

  // Track NAV history
  navs  NAVHistory[]    // this will be called as prisma.nAVHistry.findMany 
  metrics     FundMetrics?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model NAVHistory {
  schemeCode   String
  date         DateTime
  nav          Decimal

  fund         MutualFund @relation(fields: [schemeCode], references: [schemeCode])

  @@id([schemeCode, date])
  @@index([schemeCode, date])
}

model FundMetrics {
  schemeCode String  @id
  asOfDate   DateTime @default(now())
  cagr1y     Decimal?
  cagr3y     Decimal?
  vol1y      Decimal?   // annualized volatility
  rating     Int?       // 1..5
  riskLabel  String?    // Low/Moderate/High/Very High

  fund MutualFund @relation(fields: [schemeCode], references: [schemeCode])
}
